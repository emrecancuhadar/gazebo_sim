      </joint>

      <joint name='right_wheel_front_joint' type='revolute'>
        <parent>chassis</parent>
        <child>right_wheel_front</child>
        <axis>
          <xyz>0 0 1</xyz>
          <limit>
            <lower>-1.79769e+308</lower>
            <upper>1.79769e+308</upper>
          </limit>
        </axis>
      </joint>


      <plugin
        filename="ignition-gazebo-diff-drive-system"
        name="ignition::gazebo::systems::DiffDrive">
        <left_joint>left_wheel_joint</left_joint>
        <left_joint>left_wheel_front_joint</left_joint>
        <right_joint>right_wheel_joint</right_joint>
        <right_joint>right_wheel_front_joint</right_joint>
        <wheel_radius>1.3</wheel_radius>

        <!-- 🛠️ Add Odometry & TF Configuration -->
        <odom_publish_frequency>50</odom_publish_frequency>
        <odom_topic>/diff_drive/odometry</odom_topic>  <!-- Ensure odom topic is published -->
        <tf_topic>/tf</tf_topic>  <!-- Ensure transforms are published -->
        
        <!-- 🔥 Fix Missing TF Frames -->
        <frame_id>diff_drive/odom</frame_id>  <!-- Set odometry frame -->
        <child_frame_id>chassis</child_frame_id>  <!-- Connects odometry to chassis -->

        <max_linear_acceleration>1</max_linear_acceleration>
        <min_linear_acceleration>-1</min_linear_acceleration>
        <max_angular_acceleration>1</max_angular_acceleration>
        <min_angular_acceleration>-1</min_angular_acceleration>
        <max_linear_velocity>0.5</max_linear_velocity>
        <min_linear_velocity>-0.5</min_linear_velocity>
        <max_angular_velocity>1</max_angular_velocity>
        <min_angular_velocity>-1</min_angular_velocity>
      </plugin>
